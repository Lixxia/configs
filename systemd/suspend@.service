[Unit]
Description=Lock screen before suspend
Before=sleep.target

[Service]
User=%I
Type=simple
Environment=DISPLAY=:0
ExecStart=/usr/local/bin/i3lock -n -i /home/laura/.config/i3/background.png -c '#000000' -o '#A1B56C' -w '#AB4642' -l '#d8d8d8' -e
ExecStartPost=/bin/sleep 1

[Install]
WantedBy=suspend.target
