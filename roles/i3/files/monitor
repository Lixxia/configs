#!/bin/bash

extend() {
    xrandr --output DP-2 --above eDP-1 --auto
}

mirror() {
    xrandr --output DP-2 --auto --output eDP-1 --panning 2560x1440 && xrandr --output DP-2 --scale 0.9999x0.9999
    sleep 0.2
    i3-msg restart
}

laptop() {
    xrandr --output eDP-1 --panning 1920x1080 --output DP-2 --off
    sleep 0.2
    i3-msg restart
}

case "$1" in
    mirror)
        mirror;;
    laptop)
        laptop;;
esac
